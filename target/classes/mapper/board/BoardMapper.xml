<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.project.api.v1.board.mapper.BoardMapper">

		<resultMap id="BoardListMap" type="com.ssafy.project.api.v1.board.dto.BoardListItem">
	        <id property="boardId" column="board_id"/>
	        <result property="name" column="name"/>
	        <result property="postCount" column="post_count"/>
	    </resultMap>
	
	    <select id="getBoardList" resultMap="BoardListMap">
	        SELECT
	            b.board_id,
	            b.name,
	            (
	                SELECT COUNT(*)
	                FROM posts p
	                WHERE p.board_id = b.board_id
	                  AND p.deleted_at IS NULL
	            ) AS post_count
	        FROM boards b
	        ORDER BY b.board_id ASC
	    </select>
	    
	</mapper>
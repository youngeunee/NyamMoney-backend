<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.project.api.v1.postLike.mapper.PostLikeMapper">

	<!-- 좋아요 여부 확인 -->
    <select id="findLike" resultType="java.lang.Long">
        SELECT liked_id
        FROM post_likes
        WHERE post_id = #{postId}
          AND user_id = #{userId}
    </select>

    <!-- 좋아요 등록 -->
    <insert id="insertLike">
        INSERT INTO post_likes (post_id, user_id)
        VALUES (#{postId}, #{userId})
    </insert>

    <!-- 좋아요 취소 -->
    <delete id="deleteLike">
        DELETE FROM post_likes
        WHERE liked_id = #{likedId}
    </delete>
    
    <!-- 사용자가 그 게시글을 좋아요 눌렀는지 여부 -->
	<select id="existsUserLike" resultType="int">
	    SELECT COUNT(*) > 0
	    FROM post_likes
	    WHERE post_id = #{postId}
	      AND user_id = #{userId}
	</select>
	
	</mapper>